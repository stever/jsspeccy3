{
  "name": "zxspectrum",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "npm run build && node --experimental-wasm-modules test/test.js test/tests.in test/tests.expected",
    "build:core": "node src/generator/gencore.mjs src/generator/core.ts.in build/core.ts",
    "build:wasm:debug": "asc build/core.ts --target debug",
    "build:wasm:release": "asc build/core.ts --target release",
    "build:js": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack",
    "build": "npm run build:core && npm run build:wasm:debug && npm run build:js",
    "build:release": "npm run build:core && npm run build:wasm:release && npm run build:js",
    "watch": "npm-watch"
  },
  "dependencies": {
    "file-dialog": "^0.0.8",
    "jszip": "^3.7.1",
    "pako": "^2.0.4"
  },
  "devDependencies": {
    "assemblyscript": "^0.19.6",
    "cross-env": "^7.0.3",
    "npm-watch": "^0.10.0",
    "svg-inline-loader": "^0.8.2",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "watch": {
    "build:core": {
      "patterns": [
        "src/generator/*.js",
        "src/generator/*.ts.in"
      ],
      "extensions": [
        "js",
        "in"
      ]
    },
    "build:wasm:debug": {
      "patterns": [
        "build/core.ts"
      ],
      "extensions": "ts"
    },
    "build:js": {
      "patterns": [
        "src/runtime/*.js",
        "src/runtime/icons/*.svg",
        "build/*.js"
      ],
      "extensions": [
        "js",
        "svg"
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)(\\?inline)?$": "jest-transform-stub"
    },
    "globals": {
      "STAGING_ENV": "prod"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
