{
  "name": "zxspectrum",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "run-s build:clean:all build:wasm:debug build:clean && cross-env NODE_OPTIONS=--openssl-legacy-provider npx webpack serve --config webpack.dev.config.js --open",
    "test": "node --experimental-wasm-modules test/test.js test/tests.in test/tests.expected && jest",
    "build:all:debug": "run-s build:clean:all build:copyfiles build:babel build:wasm:debug build:js:debug build:clean",
    "build:all:release": "run-s build:clean:all build:copyfiles build:babel build:wasm:release build:js:release build:clean",
    "build:clean": "del-cli build es5",
    "build:clean:all": "del-cli build es5 public/dist",
    "build:copyfiles": "copyfiles \"src/**/*\" -u 1 es5",
    "build:core": "mkdir build && node src/lib/emulator/generator/gencore.mjs src/lib/emulator/generator/core.ts.in build/core.ts",
    "build:wasm:debug": "npm run build:core && asc build/core.ts --target debug",
    "build:wasm:release": "npm run build:core && asc build/core.ts --target release",
    "build:js:debug": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.dev.config.js",
    "build:js:release": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack",
    "build:babel": "babel src --out-dir es5",
    "watch": "npm-watch"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.15.4",
    "file-dialog": "^0.0.8",
    "jszip": "^3.7.1",
    "pako": "^2.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "assemblyscript": "^0.19.6",
    "babel-jest": "^27.2.1",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "del-cli": "^4.0.1",
    "jest": "^27.2.1",
    "jest-transform-stub": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "svg-inline-loader": "^0.8.2",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.3.0"
  },
  "watch": {
    "build:core": {
      "patterns": [
        "src/lib/emulator/generator/*.js",
        "src/lib/emulator/generator/*.ts.in"
      ],
      "extensions": [
        "js",
        "in"
      ]
    },
    "build:wasm:debug": {
      "patterns": [
        "build/core.ts"
      ],
      "extensions": "ts"
    },
    "build:js": {
      "patterns": [
        "src/lib/emulator/*.js",
        "src/lib/emulator/icons/*.svg",
        "build/*.js"
      ],
      "extensions": [
        "js",
        "svg"
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)(\\?inline)?$": "jest-transform-stub"
    },
    "globals": {
      "STAGING_ENV": "prod"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
