{
  "name": "zxplay",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "run-s build:clean:all build:wasm:debug serve",
    "test": "run-s test:jsspeccy jest",
    "test:jsspeccy": "node --experimental-wasm-modules test/jsspeccy/test.mjs test/jsspeccy/tests.in test/jsspeccy/tests.expected",
    "test:jest": "jest",
    "build:all:debug": "run-s build:clean:all build:copyfiles build:babel build:wasm:debug build:js:debug build:clean",
    "build:all:release": "run-s build:clean:all build:copyfiles build:babel build:wasm:release build:js:release build:clean",
    "build:clean": "del-cli build es5",
    "build:clean:all": "del-cli build es5 public/dist",
    "build:copyfiles": "copyfiles \"src/**/*\" -u 1 es5",
    "build:core": "run-s build:mkdir build:gencore",
    "build:mkdir": "mkdir build",
    "build:gencore": "node src/lib/jsspeccy/generator/gencore.mjs src/lib/jsspeccy/generator/core.ts.in build/core.ts",
    "build:wasm:debug": "run-s build:core build:asc:debug",
    "build:wasm:release": "run-s build:core build:asc:release",
    "build:asc:debug": "asc build/core.ts --target debug",
    "build:asc:release": "asc build/core.ts --target release",
    "build:js:debug": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.dev.config.js",
    "build:js:release": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack",
    "build:babel": "babel src --out-dir es5",
    "watch": "npm-watch",
    "serve": "cross-env NODE_OPTIONS=--openssl-legacy-provider npx webpack serve --config webpack.dev.config.js --open",
    "typedoc": "typedoc --entryPointStrategy expand --tsconfig ./tsconfig.json --out ./typedocs ./build/"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.15.4",
    "axios": "^0.26.0",
    "codemirror": "^5.65.1",
    "connected-react-router": "^6.9.2",
    "date-fns": "^2.28.0",
    "file-dialog": "^0.0.8",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "history": "^4.10.1",
    "jszip": "^3.7.1",
    "lodash.debounce": "^4.0.8",
    "pako": "^2.0.4",
    "pasmo": "0.0.1-alpha.3",
    "primeflex": "^3.1.2",
    "primeicons": "^5.0.0",
    "primereact": "^7.2.0",
    "query-string": "^7.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-transition-group": "^4.4.1",
    "redux": "^4.1.1",
    "redux-saga": "^1.1.3",
    "sass": "^1.39.0",
    "stacktrace-js": "^2.0.2",
    "zmakebas": "0.0.1-alpha.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "assemblyscript": "0.19.6",
    "babel-jest": "^27.2.1",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "del-cli": "^4.0.1",
    "jest": "^27.2.1",
    "jest-transform-stub": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "process": "^0.11.10",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "svg-inline-loader": "^0.8.2",
    "typedoc": "^0.22.11",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.3.0"
  },
  "watch": {
    "build:core": {
      "patterns": [
        "src/lib/jsspeccy/generator/*.js",
        "src/lib/jsspeccy/generator/*.ts.in"
      ],
      "extensions": [
        "js",
        "in"
      ]
    },
    "build:wasm:debug": {
      "patterns": [
        "build/core.ts"
      ],
      "extensions": "ts"
    },
    "build:js": {
      "patterns": [
        "src/lib/jsspeccy/*.js",
        "src/lib/jsspeccy/icons/*.svg",
        "build/*.js"
      ],
      "extensions": [
        "js",
        "svg"
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)(\\?inline)?$": "jest-transform-stub"
    },
    "globals": {
      "STAGING_ENV": "prod"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
